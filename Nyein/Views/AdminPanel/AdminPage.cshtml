@model Nyein.Models.Product

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="description" content="ငြိမ်းတွင် ကွမ်းယာပစ္စည်း ၊ အန္ဒိယဆေးမွေးပစ္စည်း ၊ မြန်မာဆေးရွက်ကြီးများ နှင့် လူသူံးကုန်ပစ္စည်းများကို ယုံကြည်စိတ်ချစွာ ဝယ်ယူနိုင်ပါသည်။">
<meta name="author" content="ငြိမ်းတွင် ကွမ်းယာပစ္စည်း ၊ အန္ဒိယဆေးမွေးပစ္စည်း ၊ မြန်မာဆေးရွက်ကြီးများနှင့် လူသုံးကုန်ကုန်ပစ္စည်းများကို ယုံကြည်စိတ်ချစွာ ဝယ်ယူနိုင်ပါသည်။">
<link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link rel="apple-touch-icon" sizes="180x180" href="~/Content/fav/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="~/Content/fav/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="~/Content/fav/favicon-16x16.png">
<meta name="theme-color" content="#ed970e">
<title>ငြိမ်းကွမ်းယာပစ္စည်း | Upload Items</title>
<!--Sweet Alert-->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@using (Html.BeginForm("AdminPage", "AdminPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    if (TempData["Message"] != null)
    {
<script>
            swal({
                title: 'Success!',
                icon: 'success',
                text: 'ပစ္စည်းအသစ်တင်ခြင်းအောင်မြင်ပါသည်',
                type: 'success',
                allowOutsideClick: false,
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Ok',
                allowEscapeKey: false
            }).then(function () {
            });
</script>
    }
    //else if (TempData["Message"] == null)
    //{
    //    Url.Action("/AdminPanel/AdminPage");
    //}
    else if (ViewBag.ErrorMessage != null)
    {
        <script>
            swal({
                title: 'အမျိုးအစားမှားယွင်းနေပါသည်',
                icon: 'error',
                text: 'ပုံသီးသန့်တင်ရန်ပြန်လည်ရွေးချယ်ပါ',
                type: 'error',
                allowOutsideClick: false,
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Ok',
                allowEscapeKey: false
            }).then(function () {
                //window.location = '/';
            });
        </script>
    }
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #f8b140">
        <a class="navbar-brand" href="#"><span style="font-weight: bold;font-family: 'Roboto', sans-serif;"><img src="~/Content/img/logo/nyein.jpg" alt="ငြိမ်း Official Logo" style=width:50px;height:50px> ငြိမ်း Admin Panel</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("ChooseService","AdminPanel")">
                            Choose Service
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                </ul>
            </div>
    </nav>
    <!-- Page Content -->
    <br />
    <br />
    <div class="container">
        <form>
            <div class="row">
                <div class="col-lg">
                    <select class="form-control form-control-lg" name="Category" id="_category" required="required">
                        <option value="All">Choose Category</option>
                        <option value="DisplayStand">Display Stand</option>
                        <option value="PromotionGift">Promotions Gift Item</option>
                        <option value="DigitalPackage">Digital Package</option>
                    </select>
                </div>
            </div><br />
            <div class="row">
                <div class="col-lg" id="DS_All">
                    <select class="form-control form-control-lg" name="Category" id="DS" required="required">
                        <option>Choose Sub Category</option>
                        <option value="AdapterSpeaker">Adapter_Speaker</option>
                        <option value="Bag">Bag</option>
                        <option value="Beauty">Beauty</option>
                        <option value="BlowSet">Blow Set</option>
                        <option value="CarAccessories">Car Accessories</option>
                        <option value="Consumable">စားသုံးကုန် ပစ္စည်းများ</option>
                        <option value="Clock">Clock</option>
                        <option value="Covid">Covid</option>
                        <option value="Cup">Cup</option>
                        <option value="Consumable">စားသုံးကုန် ပစ္စည်းများ</option>
                        <option value="ConsumerGoods">လူသုံးကုန်ပစ္စည်းများ</option>
                        <option value="IndianPerfume">အန္ဒိယဆေးမွေးပစ္စည်းများ</option>
                        <option value="MyanmatPerfume">မြန်မာဆေးရွကိကြီးပစ္စည်းများ</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg" id="DS_dropdown">
                    <select class="form-control form-control-lg" name="Category" id="DS" required="required">
                        <option>Choose Sub Category</option>
                        <option value="Popular">လူကြိုက်များထုတ်ကုန်</option>
                        <option value="Consumable">စားသုံးကုန် ပစ္စည်းများ</option>
                        <option value="ConsumerGoods">လူသုံးကုန်ပစ္စည်းများ</option>
                        <option value="IndianPerfume">အန္ဒိယဆေးမွေးပစ္စည်းများ</option>
                        <option value="MyanmatPerfume">မြန်မာဆေးရွကိကြီးပစ္စည်းများ</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg" id="PG_dropdown">
                    <select class="form-control form-control-lg" name="Category" id="PG" required="required">
                        <option>Choose Sub Category</option>
                        <option value="Popular">လူကြိုက်များထုတ်ကုန်</option>
                        <option value="Consumable">စားသုံးကုန် ပစ္စည်းများ</option>
                        <option value="ConsumerGoods">လူသုံးကုန်ပစ္စည်းများ</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg">
                    <!--Choose Image-->
                    <div class="form-group">
                        <label for="image_upload">Upload Images</label>
                        <input type="file" class="form-control-file" id="image_upload" onchange="readURL(this);"
                               name="files" style="display: none" accept="image/*" required="required" multiple /><br />
                        <img src="~/Content/img/logo/image_upload.png" class="img-fluid" alt="Responsive image"
                             style="width: 180px" id="upload_image" onclick="browse();" />
                        <br /><br />
                    </div>
                    <br /><br />
                </div>
            </div>
            <div class="row">
                <!--Enter Product Title-->
                <div class="col-lg">
                    <input class="form-control form-control-lg" type="text" placeholder="Product Title" name="Title" id="_title" required="required" /><br />
                </div>
            </div>
            <div class="row">
                <!--Enter Price-->
                <div class="col-lg">
                    <input class="form-control form-control-lg" type="text" placeholder="Price (MMK)" name="Price" id="_price" required="required" /><br />
                </div>
            </div>
            <center>
                <button type="submit" class="btn btn-outline-success" id="send">Submit</button>
            </center>
        </form>
    </div>
    <br />
    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">
        © @DateTime.Now.ToString("yyyy") Copyright:
        <a href="#" class="text-reset">www.nyeinshopping.com</a><br />
        <p>
            <b><a href="https://www.nksoftwarehouse.com">Powered By NK Software House</a></b>
        </p>
    </div>
    <!-- Copyright -->
    <!-- Footer -->
}
<script src="~/Content/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="https://kit.fontawesome.com/56ace15d76.js" crossorigin="anonymous"></script>
<script>
    AOS.init();
</script>
<!--Browser Files-->
<script src="~/Scripts/js/aos/choose_image.js"></script>
<script>
    $('document').ready(function () {
        $('#DS_All').show();
        $('#DS_dropdown').hide();
        $('#PG_dropdown').hide();
    });
    $('#_category').change(function () {
        var selectedData = $('#_category').val();
        if (selectedData == "DisplayStand") {
            $('#DS_dropdown').show();
            $('#PG_dropdown').hide();
            $('#DS_All').hide();
        } else if (selectedData == "PromotionGift") {
            $('#DS_dropdown').hide();
            $('#DS_All').hide();
            $('#PG_dropdown').show();
        } else if (selectedData == "All") {
            $('#DS_All').show();
            $('#DS_dropdown').hide();
            $('#PG_dropdown').hide();
        }
        
    });
</script>
